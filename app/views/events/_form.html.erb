<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :epigraph %>
    <%= form.text_field :epigraph %>
  </div>

  <div class="field">
    <%= form.label :to_date %>
    <%= form.text_field :to_date %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <%= form.label :hour %>
    <%= form.text_field :hour %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<div class="container-contact100">
  <div class="wrap-contact100">
    <%= form_with(model: event, local: true, class: "contact100-form validate-form") do |form| %>
      <% if event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <span class="contact100-form-title">
        Crea un nuevo evento
      </span>

      <div class="wrap-input100 validate-input">
        <%= form.text_field :title, class: "input100", placeholder: "Título" %>
        <span class="focus-input100"></span>
      </div>

      <div class="wrap-input100 validate-input">
        <%= form.text_area :description, class: "input100", placeholder: "Descripción" %>
        <span class="focus-input100"></span>
      </div>

      <div class="wrap-input100 validate-input">
        <label for="event_date" class="datelabel" >Fecha:</label>
        <%= form.date_select :date, class: "input100", placeholder: "Fecha" %>
        <span class="focus-input100"></span>
      </div>

      <div class="wrap-input100 validate-input">
        <%= form.text_field :epigraph, class: "input100", placeholder: "Epígrafe" %>
        <span class="focus-input100"></span>
      </div>

      <div class="wrap-input100 validate-input">
        <%= form.text_field :to_date, class: "input100", placeholder: "Fecha de fin" %>
        <span class="focus-input100"></span>
      </div>

      <div class="wrap-input100 validate-input">
        <%= form.text_field :url, class: "input100", placeholder: "Url" %>
        <span class="focus-input100"></span>
      </div>

      <div class="wrap-input100 validate-input">
        <%= form.text_field :hour, class: "input100", placeholder: "Hora del evento" %>
        <span class="focus-input100"></span>
      </div>

      <div class="container-contact100-form-btn">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
